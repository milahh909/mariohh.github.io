    function semangatMarioo() {
      const pesan = [
        "Marioo, kamu SUPER banget hari ini! üåü",
        "Ambil jamurnya, terus jadi kuat üí™",
        "Kerja boleh berat, tapi kamu lebih kuat dari Bowser! üê¢üî•",
        "Aku selalu di sini, Player 2-mu selamanya ‚ù§Ô∏è",
        "Semangat, Marioo! Dunia butuh pahlawan sepertimu! üí´"
      ];

      const coin = document.createElement("div");
      coin.className = "coin";
      coin.style.left = Math.random() * 90 + "%";
      coin.style.top = "80%";
      coin.textContent = "üí∞";
      document.body.appendChild(coin);

      setTimeout(() => {
        coin.remove();
      }, 1500);

      const randomMsg = pesan[Math.floor(Math.random() * pesan.length)];
      alert(randomMsg);
    }
